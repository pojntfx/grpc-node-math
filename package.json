		"pino": "^5.13.6"
	},
	"devDependencies": {
		"grpc-tools": "^1.8.0",
		"gulp": "^4.0.2",
		"jest": "^24.9.0",
		"pkg": "^4.4.0",
		"shelljs": "^0.8.3"
	},
